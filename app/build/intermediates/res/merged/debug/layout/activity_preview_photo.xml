                    android:layout_height="80dp" />

                <TextView
                    android:id="@+id/tvCrystallize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_crystallize"
                    style="@style/FilterText"
                    />
            </LinearLayout>

            <LinearLayout
